<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net461;netstandard2.0</TargetFrameworks>
    <RootNamespace>SIL.ReleaseTasks</RootNamespace>
    <Configurations>Debug;Release</Configurations>
    <Description>Several release related tasks that can work with a CHANGELOG.md file.</Description>
    <AssemblyTitle>SIL.ReleaseTasks</AssemblyTitle>
    <Company>SIL</Company>
    <Product>Palaso Library</Product>
    <Copyright>Copyright © 2018 SIL International</Copyright>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCopyrightAttribute>false</GenerateAssemblyCopyrightAttribute>
    <GenerateAssemblyDescriptionAttribute>false</GenerateAssemblyDescriptionAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <GenerateAssemblyTitleAttribute>false</GenerateAssemblyTitleAttribute>
    <Authors>SIL International</Authors>
    <PackageLicenseUrl>https://github.com/sillsdev/SIL.BuildTasks/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/sillsdev/SIL.BuildTasks</PackageProjectUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <BuildOutputTargetFolder>tools/$(TargetFramework)</BuildOutputTargetFolder>
    <!-- This is required for MarkdownDeep.NET which doesn't provide a version for a newer framework version -->
    <PackageTargetFallback Condition="'$(TargetFramework)'=='net461'">
      $(PackageTargetFallback);netframework35
    </PackageTargetFallback>
    <PackageOutputPath>../output/$(Configuration)</PackageOutputPath>
    <NoBuild>true</NoBuild>
  </PropertyGroup>
  <ItemGroup Condition="$(TargetFramework.Contains('netstandard'))">
    <PackageReference Include="MarkdownDeep.NET.Core" Version="1.5.0.2">
      <IncludeAssets>All</IncludeAssets>
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Build.Tasks.Core" Version="15.5.180" />
    <!-- still missing GitVersionTask for netstandard! -->
  </ItemGroup>
  <ItemGroup Condition="!$(TargetFramework.Contains('netstandard'))">
    <PackageReference Include="MarkdownDeep.NET.Patched" Version="1.5.0.1">
      <IncludeAssets>All</IncludeAssets>
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <Reference Include="Microsoft.Build.Framework" />
    <Reference Include="Microsoft.Build.Tasks.v4.0" />
    <Reference Include="Microsoft.Build.Utilities.v4.0" />
    <PackageReference Include="SIL.ReleaseTasks.Dogfood" Version="[2.0.0-*,)">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="GitVersionTask" Version="4.0.0">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="UtilPack.NuGet.MSBuild" Version="2.9.0" Condition="!$(TargetFramework.StartsWith('net4'))">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="UtilPack.NuGet.MSBuild" Version="2.8.0" Condition="$(TargetFramework.StartsWith('net4'))">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>
  <Import Project="SIL.ReleaseTasks.Common.inc" />
</Project>